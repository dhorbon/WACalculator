<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WACalculator.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <HorizontalStackLayout>
                <Button
                    x:Name="save"
                    Text="Save history to .txt file"
                    Clicked="Save"/>

                <Button
                    x:Name="read"
                    Text="Read query from .txt file"
                    Clicked="Read"/>
            </HorizontalStackLayout>

            <Label
                x:Name="ioMessage"/>

            <Entry
                x:Name="input"
                Placeholder="Enter query"
                />

            <Button
                x:Name="button"
                Text="Query Wolfram" 
                Clicked="Submit"/>

            <Label
                x:Name="output"
                />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
